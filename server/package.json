        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-standard": "^4.0.0",
        "mocha": "5.2.0",
        "nodemon": "^1.18.9",
        "nyc": "^14.0.0",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.2.1"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.17.1",
        "connect-mongo": "^2.0.3",
        "connect-redis": "^3.4.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
